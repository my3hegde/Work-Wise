<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allforone.oneforall.workwise.NotificationActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
    <Button
        android:id="@+id/button_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular Notification"
        android:onClick="regularNotificationClicked"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="139dp" />

    <Button
        android:id="@+id/button_critical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Critical Notification"
        android:onClick="criticalNotificationClicked"
        android:layout_below="@+id/button_regular"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="231dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
